<section id="details-page">
    <article class="details-gage-title">
        <h1>Details Page</h1>
    </article>
    <article class="details-page-card">

        <article class="details-page-card-image">
            <img src="/static/img/man.png" alt="details-image">
        </article>

        <article class="details-page-card-content">
            <p>Author: {{ad.owner.email}}</p>
            <h2>Headline: {{ad.headline}}</h2>
            <h3>Company name: {{ad.name}}</h3>
            <h4>Company description: {{ad.description}}</h4>
            <h5>Location: {{ad.location}}</h5>

            {{#if email}}
                <article class="details-page-card-buttons">
                    {{#if ad.isOwner}}
                        <a href="/ads/{{ad._id}}/edit" class="btn-edit">Edit</a>
                        <a href="/ads/{{ad._id}}/delete" class="btn-delete">Delete</a>
                    {{else}}
                        {{#if ad.hasApplied}}
                            <p class="already-applied">You have already applied!</p>
                        {{else}}
                            <a href="/ads/{{ad._id}}/apply" class="btn-apply">Apply now!</a>
                            <p class="applied-people">Hurry up, {{ad.appliers.length}} people have already applied.</p>
                        {{/if}}
                    {{/if}}
                </article>
            {{/if}}
        </article>

    </article>
</section>

{{#if ad.isOwner}}
    {{#if ad.appliers}}
    <section id="info-about-candidates">
        <h2>Candidates for this ad:</h2>
            {{#each ad.appliers}}
                {{>applier}}
            {{/each}}
    </section>
    {{/if}}
{{/if}}