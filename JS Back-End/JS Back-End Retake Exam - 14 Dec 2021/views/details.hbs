<section id="details-page">
	<h1>Details</h1>
	<article class="details-card">
		<article class="details-card-text">
			<h2>
				Title:<br />
				{{publication.title}}
			</h2>
			<h3>Author: {{publication.owner.username}}</h3>
			<h3>Painting technique: {{publication.technique}}</h3>
			<h3>Certificate of authenticity: {{publication.certificate}}</h3>

			{{#if username}}
				<div class="buttons">
					{{#if publication.isOwner}}
						<a href="/publications/{{publication._id}}/edit" class="btn-edit">Edit</a>
						<a href="/publications/{{publication._id}}/delete" class="btn-delete">Delete</a>
					{{else}}
						{{#if publication.hasShared}}
							<p class="shared-pub">You already shared this publication</p>
						{{else}}
							<a href="/publications/{{publication._id}}/share" class="btn-share">Share publication</a>
						{{/if}}
					{{/if}}
				</div>
			{{/if}}
		</article>

		<article class="details-card-image">
			<img src="{{publication.picture}}" alt="art-image2" />
		</article>
	</article>
</section>
